<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/entryFragment">
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.wearwise.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/postPageFragment"
        android:name="com.example.wearwise.AddPostFragment"
        android:label="fragment_post_page"
        tools:layout="@layout/fragment_add_post" />
    <fragment
        android:id="@+id/profilePageFragment"
        android:name="com.example.wearwise.ProfilePageFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/likePhotosFragment"
        android:name="com.example.wearwise.likePhotosFragment"
        android:label="likePhotosFragment"
        tools:layout="@layout/fragment_like_photos"/>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.wearwise.signUpFragment"
        android:label="signUpFragment"
        tools:layout="@layout/fragment_sign_up" >

        <action
            android:id="@+id/action_signUpFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_home_pageFragment"
            app:destination="@id/home_pageFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.wearwise.logInFragment"
        android:label="logInFragment"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_logInFragment_to_home_pageFragment"
            app:destination="@id/home_pageFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryFragment"
        android:name="com.example.wearwise.entryFragment"
        android:label="fragment_entry"
        tools:layout="@layout/fragment_entry" >
        <action
            android:id="@+id/action_entryFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_entryFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/home_pageFragment"
        android:name="com.example.wearwise.home_pageFragment"
        android:label="home_pageFragment"
        tools:layout="@layout/fragment_home_page" >
    />
</navigation>